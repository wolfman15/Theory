display = "показать надпись над зданием, либо на иконке нанимаемого юнита, %"
money = "количество денег в казне"
timeloss = "осталось времени постройки"
time = "время постройки здания"
price = "стоимость постройки здания"
timeprocess = текущее время строительства

if "выбрано здание для строительства" then:
{ показать текстуру здания;
  привязать текстуру к курсору;
  if "нажатие ЛКМ" then:
   {узнать стоимость постройки(price);
    узнать время постройки(time)    ;
    убрать текстуру строителя;
    for (i=1;time;i+=1):
        {if "(price/time)< money" then
           {timeloss = time - i;
            timeprocess = time - timeloss
            display (timeprocess/time*100%);
            money = money - time/price;
            wait 1 sec;
            if display = 100% then
            убрать display;
            показать текстуру строителя;
            загрузить звук "строительство готово;
            вверху справа экрана напечатать надпись "Строительство <Название постройки> закончено";
            загрузить функциональные действия отстроенного здания
           }
        elseif return;}
  end;}
end;}

